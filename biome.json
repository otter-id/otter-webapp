{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 150,
    "indentWidth": 2,
    "indentStyle": "space",
    "includes": ["**", "!node_modules", "!.next", "!public", "!build"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "useOptionalChain": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        }
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        },
        "noUnusedVariables": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        },
        "noUnusedFunctionParameters": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noRedeclare": "off",
        "noGlobalIsNan": "off"
      },
      "style": {
        "useConst": "off",
        "useTemplate": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        },
        "useNodejsImportProtocol": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
